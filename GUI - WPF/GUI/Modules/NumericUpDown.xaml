<UserControl x:Class="Minesweeper3D.WPF.GUI.Modules.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minesweeper3D.WPF.GUI.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="80">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TB_value" FontSize="20" Text="1" TextWrapping="Wrap" VerticalContentAlignment="Center" Grid.RowSpan="2" TextInput="TB_value_TextInput"/>
        <Button x:Name="B_up" Content="+" Grid.Column="1" Click="B_up_Click"/>
        <Button x:Name="B_down" Content="-" Grid.Row="1" Grid.Column="1" Click="B_down_Click"/>
    </Grid>
</UserControl>
